<% include ./partials/header %>

<div class="ui container">
  <div class="ui link cards">
      <% items.forEach(function(item){ %>
        <% if(currentUser && item.author.id.equals(currentUser._id)){%>
          <div class="card">
              <div class="image">
                  <img src="<%= item.image %>">
              </div>
              <div class="content">
                <div class="header"><%= item.name %></div>
                <div class="meta">
                  <a> <%= item.category %> </a>
                </div>
                <div class="description">
                  <%=item.description%>
                </div>
              </div>
              <div class="extra content">
                <span class="right floated">
                  Last used  <%= moment(item.lastUsed).format( "MMM YYYY") %> 
                </span>
                <span>Stored on <%= moment(item.storedDate).format( "MMM YYYY") %> </span>
                <a  href="/items/<%= item._id%>" >LINK</a>
              </div>
          </div>
        <% } else {};%> 
      <% }); %>
  </div>
  <a class="ui button large" href="/items/new">Add New item</a>
</div>



<% include ./partials/footer %>