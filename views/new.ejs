<!--Form to add a new item-->
<div class="ui middle aligned center aligned grid">
    <div class="column ui stacked segment forme">
        <form class="ui large form" action="/items" method="POST">
          <div class="field">
            <label>Item Name</label>
            <input type="text" name="item[name]" placeholder="Item Name">
          </div>
          <div class="field">
            <label>Item Image</label>
            <input type="text" name="item[image]" placeholder="Item image url">
          </div>
          <div class="field">
            <label>Item Location</label>
            <input type="text" name="item[location]" placeholder="Where is this item now">
          </div>
          <div class="field">
            <label> Would you like to store this item now</label>
            <input type="radio" name="pickup" value="Yes" required> Yes<br>
            <input type="radio" name="pickup" value="No" required> No<br>
          </div>
          <div class="field">
            <label>Item Description</label>
            <textarea rows="2" name="item[description]"></textarea>
          </div>
          <button class="ui button" type="submit">Submit</button>
        </form>
        
    </div>
</div>
<a href="/items">Go Back to Items</a>

